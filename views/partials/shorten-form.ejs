<div class="shorten-form-wrapper">
  <form id="shorten-form" action="/shorten" method="POST" class="space-y-4">
    <input type="text" name="url" placeholder="Enter URL to shorten" required
      class="border border-blue-300 rounded-lg p-3 w-full focus:outline-none focus:ring-2 focus:ring-blue-400 transition" />
    <input type="date" name="expiresAt"
      class="border border-gray-300 rounded-lg p-3 w-full focus:outline-none focus:ring-2 focus:ring-blue-400 transition"
      placeholder="Expiration Date (optional)" />
    <button type="submit"
      class="bg-blue-500 hover:bg-blue-600 text-white font-bold rounded-lg p-3 w-full shadow transition">
      Shorten
    </button>
  </form>
  <div id="short-url-result" class="mt-4 text-center"></div>
</div>
<script src="/js/shorten-form.js"></script>